%section
  = form_for @user do |f|
    %header
      %h1 User Registration
    %fieldset.large-6
      %p
        = f.label :name
        = f.text_field :name
      %p
        = f.label :email
        = f.text_field :email
      %p
        = f.label :password
        = f.password_field :password
    %br
      %input(type="submit" value="Register" class="button")