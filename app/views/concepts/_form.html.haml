%section
  = form_for @concept do |f|
    %section.formspace
      .form-group
        = f.label :term, class: "control-label"
        = f.text_field :term, class: "form-control"
      
      .form-group
        = f.label :concept, class: "control-label"
        = f.text_area :concept_text, rows: 6, class: "form-control"
      .form-group
        = f.submit(@concept.new_record? ? "Create Concept" : "Update Concept", class: "btn btn-warning")
  