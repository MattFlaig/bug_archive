%section
= form_for [@bug, @object, @listing] do |f|
  %section.formspace
    .form-group
      = f.label :filename, class: "control-label"
      = f.text_field :filename, class: "form-control"
    .form-group
      = f.label :snippet, class: "control-label"
      = f.text_area :snippet, rows: 6, class: "form-control"
  %p
    = f.submit(value: "Add a code snippet", class: "btn btn-success")